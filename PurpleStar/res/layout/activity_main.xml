<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/mainAdContainer"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/mainAdContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg" >

        <EditText
            android:id="@+id/main_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:hint="@string/tips_input" />

        <Spinner
            android:id="@+id/main_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/main_content"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/main_doTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/main_content"
            android:layout_margin="2dp"
            android:text="@string/main_doTranslation" />
        
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/translationContent" 
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:layout_below="@id/main_doTrans"
            android:background="@drawable/text_style"
            android:text="                                              \n\n\n                                                          "
            />

        <Button
            android:id="@+id/main_doCopy"
            android:textColor="#000000"
            android:background="@drawable/button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/docopy" />
    </RelativeLayout>

</RelativeLayout>